.chat-main
  .chat-main__group-info
    .chat-main__group-info__left
      %h2.group-name
        = @group.name
      %ul.group-member
        Member:
        %li.name-first
          - @group.users.each do |user|
            = user.name
          
    .chat-main__group-info__edit-btn
      = link_to "edit", edit_group_path(@group.id), class: "EDITlink"

  .chat-main__message-list
    .chat-main__message-list__box
      .chat-main__message-list__box__info
        %p.username
          masa
        %p.time
          2019/11/20(wed) 11:43:01
      %P.text
        おはよう！
        
    .chat-main__message-list__box-second
      .chat-main__message-list__box-second__info
        %p.username-second
          masa
        %p.time-second
          2019/11/20(wed) 11:43:34
      %P.text-second
        今日は夜から雨

  .chat-main__message-form
    = form_for [@group, @message], html: {class: 'new_message'}  do |f|
      .messages
        = render @messages
      
      .input-box
        = f.text_field :content, class: 'input-box__text',placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'
